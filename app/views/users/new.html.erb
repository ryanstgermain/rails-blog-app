<div class="container">
    <h1 align="center">Signup for Blog Web App</h1>

    <%= render 'shared/errors', obj: @user %>

    <div>
        <div class="col-xs-12">
            <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
                <div class="form-group">
                    <div class="col-sm-2 control-label">
                        <%= f.label :username, class: "form-label" %>
                    </div>
                    <div class="col-sm-8">
                        <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-2 control-label">
                        <%= f.label :email, class: "form-label" %>
                    </div>
                    <div class="col-sm-8">
                        <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-2 control-label">
                        <%= f.label :password, class: "form-label" %>
                    </div>
                    <div class="col-sm-8">
                        <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <%= f.submit "Sign up", class: "btn-color btn btn-primary btn-large" %>
                    </div>
                </div>
            <% end %>
            <div class="col-xs-4 col-xs-offset-4 form-label" align="center">
                [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
            </div>
        </div>
    </div>
</div>